<h2>Update the drone</h2>

<form action="/drones/{{_id}}/edit" method="post">

    <div class="input-group mb-3">
        <span class="input-group-text" id="basic-addon1">🚁</span>
        <input type="text" value="{{name}}" name="name" id="name" class="form-control" placeholder="Drone's name" aria-label="Name" aria-describedby="basic-addon1">
    </div>

    <div class="input-group mb-3">
        <span class="input-group-text" id="basic-addon1">💿</span>
        <input type="text" value="{{propellers}}" name="propellers" id="propellers" class="form-control" placeholder="Number of propellers" aria-label="Name" aria-describedby="basic-addon1">
    </div>

    <div class="input-group mb-3">
        <span class="input-group-text" id="basic-addon1">💨</span>
        <input type="text" value="{{maxSpeed}}" name="maxSpeed" id="maxSpeed" class="form-control" placeholder="Maximum Speed" aria-label="Name" aria-describedby="basic-addon1">
    </div>

    <button type="submit" class="btn btn-warning">Submit edits</button>

</form>