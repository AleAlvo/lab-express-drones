<h2>Update the drone</h2>

<form action="/drones/{{_id}}/edit" method="post">

    <label for="name">Name</label>
    <input type="text" name="name" id="name" value="{{name}}"/>

    <label for="propellers">Number of propellers</label>
    <input type="number" name="propellers" id="propellers" value="{{propellers}}"/>

    <label for="maxSpeed">Maximum speed</label>
    <input type="number" name="maxSpeed" id="maxSpeed" value="{{maxSpeed}}"/>

    <button type="submit">Submit edits</button>

</form>


